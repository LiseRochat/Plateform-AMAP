{% block title %}AMAP | Inscription{% endblock %}

{% block body %}



    <div class="center-title">
        <h1 class="titre1 txt-center">Formulaire d'inscription</h1>
        <p class="p">Cela ne vous prendra qu'un instant !</p>
    </div>

    <!--FORM INSCRIPTION-->
    <form method="post">
    <div class="contain p-5">
        <div class="contain-content">
            


            <article class=" m-1-b m-3-bottom">
                <div class="flex-center-h">
                    <div class="circle h2">1</div>
                    <h2 class="h2 flex-center-h">Formulaire d'inscription </h2><button style="cursor: pointer;"
                    id="openpopup-page-accueil-seo"></button><span class="details">non-modifiable</span>
                </div>
                    <div class="flex m-2-left">
